{
    "kind": "Template",
    "apiVersion": "v1",
    "metadata": {
        "name": "jupyterhub",
        "annotations": {
            "openshift.io/display-name": "JupyterHub (OpenShift)",
            "iconClass": "icon-python",
            "tags": "python,jupyter,jupyterhub"
        }
    },
    "parameters": [
        {
            "name": "JUPYTERHUB_NAME",
            "value": "jupyterhub",
            "required": true
        },
        {
            "name": "NOTEBOOK_REPOSITORY_URL",
            "value": "https://github.com/jakevdp/PythonDataScienceHandbook",
            "required": true
        },
        {
            "name": "NOTEBOOK_REPOSITORY_CONTEXT_DIR",
            "value": ""
        },
        {
            "name": "NOTEBOOK_PYTHON_VERSION",
            "value": "3.5"
        },
        {
            "name": "NOTEBOOK_REQUIREMENTS_TXT",
            "value": ""
        },
        {
            "name": "JUPYTERLAB_ENABLED",
            "value": "true"
        },
        {
            "name": "JUPYTERHUB_ADMIN_USERS",
            "value": "",
            "required": false
        },
        {
            "name": "JUPYTERHUB_ENROLLED_USERS",
            "value": "",
            "required": false
        },
        {
            "name": "JUPYTERHUB_IDLE_TIMEOUT",
            "value": "3600"
        },
        {
            "name": "POSTGRESQL_VOLUME_SIZE",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "KEYCLOAK_VOLUME_SIZE",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "NOTEBOOK_VOLUME_SIZE",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "NOTEBOOK_MEMORY",
            "value": "1Gi",
            "required": true
        },
        {
            "name": "JUPYTERHUB_CONFIG",
            "value": "",
            "required": false
        },
        {
            "name": "DATABASE_PASSWORD",
            "generate": "expression",
            "from": "[a-zA-Z0-9]{16}",
            "required": true
        },
        {
            "name": "COOKIE_SECRET",
            "generate": "expression",
            "from": "[a-f0-9]{32}",
            "required": true
        }
    ],
    "objects": [
        {
            "kind": "ConfigMap",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-cfg",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "data": {
                "jupyterhub_config.py": "${JUPYTERHUB_CONFIG}"
            }
        },
        {
            "kind": "ServiceAccount",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-hub",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                },
                "annotations": {
                    "serviceaccounts.openshift.io/oauth-redirectreference.first": "{\"kind\":\"OAuthRedirectReference\",\"apiVersion\":\"v1\",\"reference\":{\"kind\":\"Route\",\"name\":\"${JUPYTERHUB_NAME}\"}}",
                    "serviceaccounts.openshift.io/oauth-redirecturi.first": "hub/oauth_callback",
                    "serviceaccounts.openshift.io/oauth-want-challenges": "false"
                }
            }
        },
        {
            "kind": "RoleBinding",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-edit",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "subjects": [
                {
                    "kind": "ServiceAccount",
                    "name": "${JUPYTERHUB_NAME}-hub"
                }
            ],
            "roleRef": {
                "name": "edit"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-hub-s2i",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-hub-s2i",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/jupyter-on-openshift/jupyterhub-quickstart.git"
                    }
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "python:3.5",
                            "namespace": "openshift"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${JUPYTERHUB_NAME}-hub-s2i:latest"
                    }
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-hub-img",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            }
        },

        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-hub-img",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/jupyter-on-openshift/poc-hub-openshift-auth.git"
                    },
                    "contextDir": "jupyterhub"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${JUPYTERHUB_NAME}-hub-s2i:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${JUPYTERHUB_NAME}-hub-img:latest"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-pgsql",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "stringData": {
                "password": "${DATABASE_PASSWORD}"
            }
        },
        {
            "kind": "DeploymentConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "strategy": {
                    "type": "Recreate"
                },
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange",
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "wait-for-database",
                                "jupyterhub"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "${JUPYTERHUB_NAME}-hub-img:latest"
                            }
                        }
                    }
                ],
                "replicas": 1,
                "selector": {
                    "app": "${JUPYTERHUB_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_NAME}"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${JUPYTERHUB_NAME}",
                            "deploymentconfig": "${JUPYTERHUB_NAME}"
                        }
                    },
                    "spec": {
                        "serviceAccountName": "${JUPYTERHUB_NAME}-hub",
                        "initContainers": [
                            {
                                "name": "wait-for-database",
                                "image": "${JUPYTERHUB_NAME}-hub-img:latest",
                                "command": [ "wait-for-database" ],
                                "env": [
                                    {
                                        "name": "JUPYTERHUB_DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${JUPYTERHUB_NAME}-pgsql",
                                                "key": "password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_HOST",
                                        "value": "${JUPYTERHUB_NAME}-db"
                                    }
                                ]
                            }
                        ],
                        "containers": [
                            {
                                "name": "jupyterhub",
                                "image": "${JUPYTERHUB_NAME}-hub-img:latest",
                                "ports": [
                                    {
                                        "containerPort": 8080,
                                        "protocol": "TCP"
                                    }
                                ],
                                "env": [
                                    {
                                        "name": "JUPYTERHUB_SERVICE_NAME",
                                        "value": "${JUPYTERHUB_NAME}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_NOTEBOOK_IMAGE",
                                        "value": "${JUPYTERHUB_NAME}-nb-img:latest"
                                    },
                                    {
                                        "name": "JUPYTERHUB_IDLE_TIMEOUT",
                                        "value": "${JUPYTERHUB_IDLE_TIMEOUT}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_ENABLE_LAB",
                                        "value": "${JUPYTERLAB_ENABLED}"
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${JUPYTERHUB_NAME}-pgsql",
                                                "key": "password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "JUPYTERHUB_DATABASE_HOST",
                                        "value": "${JUPYTERHUB_NAME}-db"
                                    },
                                    {
                                        "name": "JUPYTERHUB_COOKIE_SECRET",
                                        "value": "${COOKIE_SECRET}"
                                    },
                                    {
                                        "name": "NOTEBOOK_VOLUME_SIZE",
                                        "value": "${NOTEBOOK_VOLUME_SIZE}"
                                    }
                                ],
                                "volumeMounts": [
                                    {
                                        "name": "config",
                                        "mountPath": "/opt/app-root/configs"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "config",
                                "configMap": {
                                    "name": "${JUPYTERHUB_NAME}-cfg",
                                    "defaultMode": 420
                                }
                            }
                        ]
                    }
                }
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "8080-tcp",
                        "protocol": "TCP",
                        "port": 8080,
                        "targetPort": 8080
                    },
                    {
                        "name": "8081-tcp",
                        "protocol": "TCP",
                        "port": 8081,
                        "targetPort": 8081
                    }
                ],
                "selector": {
                    "app": "${JUPYTERHUB_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_NAME}"
                }
            }
        },
        {
            "kind": "Route",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                },
                "annotations": {
                    "haproxy.router.openshift.io/hsts_header": "max-age=31536000;includeSubDomains"
                }
            },
            "spec": {
                "host": "",
                "to": {
                    "kind": "Service",
                    "name": "${JUPYTERHUB_NAME}",
                    "weight": 100
                },
                "port": {
                    "targetPort": "8080-tcp"
                },
                "tls": {
                    "termination": "edge"
                }
            }
        },
        {
            "kind": "PersistentVolumeClaim",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "accessModes": [
                    "ReadWriteOnce"
                ],
                "resources": {
                    "requests": {
                        "storage": "1Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "DeploymentConfig",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "replicas": 1,
                "selector": {
                    "app": "${JUPYTERHUB_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_NAME}-db"
                },
                "strategy": {
                    "type": "Recreate"
                },
                "template": {
                    "metadata": {
                        "labels": {
                            "app": "${JUPYTERHUB_NAME}",
                            "deploymentconfig": "${JUPYTERHUB_NAME}-db"
                        }
                    },
                    "spec": {
                        "containers": [
                            {
                                "name": "postgresql",
                                "env": [
                                    {
                                        "name": "POSTGRESQL_USER",
                                        "value": "jupyterhub"
                                    },
                                    {
                                        "name": "POSTGRESQL_PASSWORD",
                                        "valueFrom": {
                                            "secretKeyRef": {
                                                "name": "${JUPYTERHUB_NAME}-pgsql",
                                                "key": "password"
                                            }
                                        }
                                    },
                                    {
                                        "name": "POSTGRESQL_DATABASE",
                                        "value": "jupyterhub"
                                    }
                                ],
                                "livenessProbe": {
                                    "tcpSocket": {
                                        "port": 5432
                                    }
                                },
                                "ports": [
                                    {
                                        "containerPort": 5432,
                                        "protocol": "TCP"
                                    }
                                ],
                                "readinessProbe": {
                                    "exec": {
                                        "command": [
                                            "/bin/sh",
                                            "-i",
                                            "-c",
                                            "psql -h 127.0.0.1 -U $POSTGRESQL_USER -q -d $POSTGRESQL_DATABASE -c 'SELECT 1'"
                                        ]
                                    }
                                },
                                "volumeMounts": [
                                    {
                                        "mountPath": "/var/lib/pgsql/data",
                                        "name": "data"
                                    }
                                ]
                            }
                        ],
                        "volumes": [
                            {
                                "name": "data",
                                "persistentVolumeClaim": {
                                    "claimName": "${JUPYTERHUB_NAME}-db"
                                }
                            },
                            {
                                "name": "config",
                                "configMap": {
                                    "name": "${JUPYTERHUB_NAME}-cfg",
                                    "defaultMode": 420
                                }
                            }
                        ]
                    }
                },
                "triggers": [
                    {
                        "imageChangeParams": {
                            "automatic": true,
                            "containerNames": [
                                "postgresql"
                            ],
                            "from": {
                                "kind": "ImageStreamTag",
                                "name": "postgresql:9.6",
                                "namespace": "openshift"
                            }
                        },
                        "type": "ImageChange"
                    },
                    {
                        "type": "ConfigChange"
                    }
                ]
            }
        },
        {
            "kind": "Service",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-db",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "ports": [
                    {
                        "name": "5432-tcp",
                        "protocol": "TCP",
                        "port": 5432,
                        "targetPort": 5432
                    }
                ],
                "selector": {
                    "app": "${JUPYTERHUB_NAME}",
                    "deploymentconfig": "${JUPYTERHUB_NAME}-db"
                }
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-nb-s2i",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-nb-s2i",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "https://github.com/jupyter-on-openshift/jupyter-notebooks.git",
                        "ref": "1.0.0"
                    },
                    "contextDir": "minimal-notebook"
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "python:${NOTEBOOK_PYTHON_VERSION}",
                            "namespace": "openshift"
                        },
                        "env": [
                            {
                                "name": "JUPYTER_INSTALL_LAB",
                                "value": "${JUPYTERLAB_ENABLED}"
                            }
                        ]
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${JUPYTERHUB_NAME}-nb-s2i:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "memory": "3Gi"
                    }
                }
            }
        },
        {
            "apiVersion": "v1",
            "kind": "Secret",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-nb",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "stringData": {
                "requirements.txt": "${NOTEBOOK_REQUIREMENTS_TXT}"
            }
        },
        {
            "kind": "ImageStream",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-nb-img",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            }
        },
        {
            "kind": "BuildConfig",
            "apiVersion": "v1",
            "metadata": {
                "name": "${JUPYTERHUB_NAME}-nb-img",
                "labels": {
                    "app": "${JUPYTERHUB_NAME}"
                }
            },
            "spec": {
                "triggers": [
                    {
                        "type": "ConfigChange"
                    },
                    {
                        "type": "ImageChange"
                    }
                ],
                "source": {
                    "type": "Git",
                    "git": {
                        "uri": "${NOTEBOOK_REPOSITORY_URL}"
                    },
                    "contextDir": "${NOTEBOOK_REPOSITORY_CONTEXT_DIR}",
                    "secrets": [
                        {
                            "secret" : {
                                "name": "${JUPYTERHUB_NAME}-nb"
                            },
                            "destinationDir": "/tmp/build"
                        }
                    ]
                },
                "strategy": {
                    "type": "Source",
                    "sourceStrategy": {
                        "from": {
                            "kind": "ImageStreamTag",
                            "name": "${JUPYTERHUB_NAME}-nb-s2i:latest"
                        }
                    }
                },
                "output": {
                    "to": {
                        "kind": "ImageStreamTag",
                        "name": "${JUPYTERHUB_NAME}-nb-img:latest"
                    }
                },
                "resources": {
                    "limits": {
                        "memory": "3Gi"
                    }
                }
            }
        }
    ]
}
